<div class="container">

  <div class="d-flex justify-content-between m-3">
  <h2>ショッピングカート</h2>
    <%= link_to"カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger m-0", method: :delete, data: {confirm: "カートを空にしてもいいですか？"} %>
  </div>

  <% if @cart_items.present? %>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.product, :image, :fill, 60, 40, format: 'jpeg', class: "mr-3" %>
          <%= cart_item.product.name %>
        </td>
        <td>
          <%= cart_item.product.add_tax_price.to_s(:price)%>
        </td>
        <td class="cart_item_quantit_list">
          <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true do |f| %>
            <%= f.number_field :quantity, min: 1, include_blank: cart_item.quantity.to_s, class: "cart_item_quantit" %>
          <%= f.submit"変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td>
          <% @subtotal = cart_item.quantity.to_i * cart_item.product.add_tax_price %>
          <%= @subtotal %>
        </td>
        <td class="text-center">
          <%= link_to"削除する", cart_item_path(cart_item), class: "btn btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %>
        </td>
      </tr>
      <% @sum += @subtotal %>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p class="m-3">カートに商品は入っていません</p>
  <% end %>

  <div class="text-center m-5">
    <p class="font-weight-bold h3 text-right">合計金額: <%= @sum %>円</p>
  </div>
  <div class="text-center">
    <%= link_to"買い物を続ける", products_path , class: "btn btn-primary" %>
    <%= link_to"情報入力に進む", cart_items_path, class: "btn btn-success" %>
  </div>
</div>