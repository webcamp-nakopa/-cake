<div class="container">
    <h2>マイページ</h2>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <div class="form-group row">
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </div>
      <div class="form-group row">
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </div>
      <div class="form-group row">
        <%= @customer.postal_code %>
      </div>
      <div class="form-group row">
        <%= @customer.address %>
      </div>
      <div class="form-group row">
        <%= @customer.telephone_number %>
      </div>
      <div class="form-group row">
        <%= @customer.email %>
      </div>
    </div>
      <div>
        <p><%= link_to "編集", edit_customer_path(@customer), class: "btn btn-outline-dark col-md-3 col-sm-3 col-xs-12" %></p>
        <p><%= link_to '配送先', deliveries_path, class: "btn btn-outline-dark col-md-3 col-sm-3 col-xs-12" %></p>
        <p><%= link_to '注文履歴', orders_path, class: "btn btn-outline-dark col-md-3 col-sm-3 col-xs-12" %></p>
      </div>
</div>


