<h2>会員情報編集</h2>

<% if @customer.errors.any? %>
    <div id="error_explanation">
     <ul>
       <% @customer.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model: @customer, local: true do |f| %>

  <div class="field">
    <label for="name">名前</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <label for="name_kana">名前(かな)</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <label for="email">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <label for="postal_code">郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <label for="address">住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <label for="telephone_number">電話番号</label>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class: "btn btn-outline-info" %>
    <%= link_to '退会する' , customers_confirm_path(@customer), class: "btn btn-outline-danger" %>
  </div>
<% end %>