<div class="container">
  <div class="row">
  <div class="col-md-8 col-sm-8 col-xs-12">
<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <label for="name" class="col-md-3 col-sm-3 col-xs-12">名前</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-md-4 col-sm-4 col-xs-12" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <label for="name_kana" class="col-md-3 col-sm-3 col-xs-12">名前(かな)</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-md-4 col-sm-4 col-xs-12" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <label for="postal_code" class="col-md-3 col-sm-3 col-xs-12">郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "ハイフンなし", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <label for="address" class="col-md-3 col-sm-3 col-xs-12">住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <label for="telephone_number" class="col-md-3 col-sm-3 col-xs-12">電話番号</label>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <label for="email" class="col-md-3 col-sm-3 col-xs-12">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <!--<%#= f.label :password, class: "col-md-4 col-sm-4 col-xs-12" %>-->
    <%# if @minimum_password_length %>
    <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
    <%# end %>
    <label for="password" class="col-md-3 col-sm-3 col-xs-12">パスワード</label>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "最低6文字必要です", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="field">
    <label for="password_confirmation" class="col-md-3 col-sm-3 col-xs-12">パスワード(確認)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-4 col-sm-4 col-xs-12" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "sbtn btn-6 mypage text-center" %>
  </div>
<% end %>
</div>
<div class="col-md-4 col-sm-4 col-xs-12">
<%#= render "public/customers/shared/links" %>
<h2>既に登録済みの方</h2>
<p><%= link_to 'こちら', new_customer_session_path, class: "sbtn btn-6 mypage text-center" %></p>

</div>
</div>
