<% if @cart_item.errors.any? %>
  <div id="error_explanation">
    <ul>
     <% @cart_item.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
	<div class="row">
		<div class="col-md-3 col-sm-3 col-xs-3">
			<table class="table text-center">
      <thead class="thead-light">
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, search_path(word: genre.name) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
		</div>
		<div class="col-md-9 col-sm-9 col-xs-9">
			<div class="row">
			  <div class="col-md-5 col-sm-5 col-xs-12">
  			  <%= attachment_image_tag @product, :image, :fill, 200, 160, format: 'jpeg' %>
  			</div>
  			<div class="col-md-7 col-sm-7 col-xs-12">
    			<h3><%= @product.name %></h3>
    			<p class="mb-5"><%= @product.description %></p>
    			<p>¥<%= @product.add_tax_price.to_s(:price) %>(税込)</p>
    			<%= form_with model: @cart_item, url: "/cart_items", method: :post, local: true do |f| %>
    			  <%= f.hidden_field :product_id, value: @product.id %>
      			<%= f.select :quantity, options_for_select((1..10).to_a), include_blank: '個数選択', value: 0 %>
      			<p><%= alert %></p>
      			<%= f.submit "カートに入れる", class: "btn btn-success" %>
      		<% end %>
  			</div>
			</div>
		</div>
	</div>
</div>