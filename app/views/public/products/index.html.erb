<div class="container">
	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
		  <div class="d-flex justify-content-between">
        <h2 class="mb-3">商品<span class="small">(全<%= @products.count %>件)</span></h2>
          <div class="dropdown mr-5">
            <button class="btn dropdown-toggle product-dropdown font-weight-bold"
            type="button" id="dropdownMenu1" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            <span class='product-dropdown'>ジャンル検索</span>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <%= link_to '全ての商品', products_path, class: "dropdown-item" %>
              <% @genres.each do |genre| %>
                <%= link_to genre.name, search_path(word: genre.name), class: "dropdown-item" %>
              <% end %>
            </div>
          </div>
        </div>
			<div class="row ml-1">
					<% @products.each do |product| %>
					<div class="flex-wrap">
            <%= link_to product_path(product.id) do %>
              <%= attachment_image_tag product, :image, :fill, 180, 180, format: 'jpeg', class: "border-radius mb-2" %>
            <% end %>
            <p class="m-0"><%= link_to product.name, product_path(product) %></p>
            <p>¥<%= product.price %></p>
  				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
