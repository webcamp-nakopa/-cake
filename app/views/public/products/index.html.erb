<div class="container mt-5">
	<div class="row">
		<div class="col-md-3 col-sm-3 col-xs-3">
			<table class="table text-center">
      <thead class="thead-light">
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, search_path(word: genre.name) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
		</div>
		<div class="col-md-9 col-sm-9 col-xs-9">
      <h2>商品一覧<span class="small">(全<%= @products.count %>件)</span></h2>
			<div class="row">
					<% @products.each do |product| %>
					<div class="col-md-3 col-sm-3 col-xs-12">
            <%= attachment_image_tag product, :image, :fill, 160, 100, format: 'jpeg' %>
            <p><%= link_to product.name, product_path(product) %></p>
            <p>¥<%= product.price %></p>
  				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
