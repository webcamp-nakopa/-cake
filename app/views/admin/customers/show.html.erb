  <div class="container">
    <h2 class="mt-5">会員詳細(admin側)</h2>
    <div class="mt-5 mb-5">
      <div class="form-group row">
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </div>
      <div class="form-group row">
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </div>
      <div class="form-group row">
        <%= @customer.postal_code %>
      </div>
      <div class="form-group row">
        <%= @customer.address %>
      </div>
      <div class="form-group row">
        <%= @customer.telephone_number %>
      </div>
      <div class="form-group row">
        <%= @customer.email %>
      </div>
      <div class="form-group row">
        <% if @customer.is_deleted == true %>
          <p>有効</p>
        <% else %>
          <p>無効</p>
        <% end %>
      </div>
      <div class="form-group row">
        <%= link_to '会員情報編集', edit_admin_customer_path(@customer.id), class: "btn btn-outline-dark" %>
      </div>
    </div>
  </div>