<div class="container">
  <h2 class="mt-5">商品新規登録</h2>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <ul>
       <% @product.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-5 mb-5">
    <%= form_with model: @product, url: "/admin/products", local: true do |f| %>
      <div class="form-group row">
        <%= f.label :image, "商品画像", class: "col-sm-2" %>
        <%= f.attachment_field :image, class: "col-sm-4 p-0" %>
      </div>
      <div class="form-group row">
        <%= f.label :name, "商品名", class: "col-sm-2" %>
        <%= f.text_field :name, class: "col-sm-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :description, "商品説明", class: "col-sm-2" %>
        <%= f.text_area :description, class: "col-sm-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :genre_id, "ジャンル", class: "col-sm-2" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      </div>
      <div class="form-group row">
        <%= f.label :price, "税抜価格", class: "col-sm-2" %>
        <%= f.text_field :price, class: "col-sm-3" %>円
      </div>
      <div class="form-group row radio-button">
        <%= f.label :sales_status, "販売ステータス", class: "col-sm-2" %>
        <%= f.radio_button :sales_status, false, class: 'mt-1' %>
        <%= f.label :sales_status, '販売中', value: :false %>
        <%= f.radio_button :sales_status, true, class: 'mt-1 ml-3' %>
        <%= f.label :sales_status, '販売停止', value: :true %>
      </div>
      <div class="form-group row">
        <%= f.submit "新規登録", class: "admin-btn" %>
      </div>
    <% end %>

    </div>
  </div>
</div>