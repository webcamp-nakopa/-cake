<div class="container">
  <h2>商品詳細</h2>

  <div class="row">
    <div class="col-md-6 col-sm-6 col-xs-6 text-right">
      <%= attachment_image_tag @product, :image, :fill, 280, 220, format: 'jpeg', class: "border-radius" %>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-6">
      <div class="form-group row">
        <label class="col-sm-6" >商品名</label>
        <%= @product.name %>
      </div>
      <div class="form-group row">
        <label class="col-sm-6" >商品説明</label>
        <%= @product.description %>
      </div>
      <div class="form-group row">
        <label class="col-sm-6" >ジャンル</label>
         <%= @product.genre.name %>
      </div>
      <div class="form-group row">
        <label class="col-sm-6" >税込価格(税抜価格)</label>
        <%= @product.price %>円
      </div>
      <div class="form-group row">
        <label class="col-sm-6" >販売ステータス</label>
        <% if @product.sales_status == false  %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </div>
      <div class="form-group row text-center">
        <%= link_to"編集する", edit_admin_product_path(@product), class: "edit-btn" %>
      </div>
    </div>
  </div>
