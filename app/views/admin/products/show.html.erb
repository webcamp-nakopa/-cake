<div class="container">
  <h2>商品詳細</h2>

  <div class="row">
  <div class="d-flex">
    <div class="flex-wrap mr-5">
      <%= attachment_image_tag @product, :image, :fill, 280, 220, format: 'jpeg', class: "border-radius" %>
    </div>
  <div class="flex-wrap">
    <div>
      <label class="field-size">商品名</label>
      <%= @product.name %>
    </div>
    <div>
      <label class="field-size">商品説明</label>
      <%= @product.description %>
    </div>
    <div>
      <label class="field-size">ジャンル</label>
       <%= @product.genre.name %>
    </div>
    <div>
      <label class="field-size">税込価格(税抜価格)</label>
      <%= @product.price %>円
    </div>
    <div>
      <label class="field-size">販売ステータス</label>
      <% if @product.sales_status == false  %>
        <span class="text-success">販売中</span>
      <% else %>
        <span class="text-secondary">販売停止中</span>
      <% end %>
    </div>
    <div class="form-group row text-center mt-4">
      <%= link_to"編集する", edit_admin_product_path(@product), class: "sbtn btn-6 m-0 ml-3" %>
    </div>
  </div>
</div>