<div class="container">
  <h2 class="mt-5">商品新規登録</h2>
  <div class="mt-5 mb-5">
    <%= form_with model: @product, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :image_id, "商品画像", class: "col-sm-2" %>
        <%#= f.attachment_field :image_id, class: "col-sm-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :name, "商品名", class: "col-sm-2" %>
        <%#= @product.name, class: "col-sm-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :description, "商品説明", class: "col-sm-2" %>
        <%#= @product.description, class: "col-sm-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :genre_</div>id, "ジャンル", class: "col-sm-2" %>
         <%#= @product.genre_id, [["販売中"], ["販売停止"]], include_blank: "選択して下さい", class: "col-sm-3" %>
      </div>
      <div class="form-group row">
        <%= f.label :price, "税込価格(税抜価格)", class: "col-sm-2" %>
        <%#= @product.price, class: "col-sm-3" %>円
      </div>
      <div class="form-group row">
        <%= f.label :sales_status, "販売ステータス", class: "col-sm-2" %>
        <%= f.radio_button :sales_status, '1' %>
        <%= f.label :sales_status, '販売中', value: 1 %>
        <%= f.radio_button :sales_status, '0' %>
        <%= f.label :sales_status, '販売停止', value: 0 %>
      </div>
      <div class="form-group row">
        <%= f.submit "編集する", class: "btn btn-success" %>
      </div>
    <% end %>

  </div>
