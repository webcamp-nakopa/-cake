<div class="container">
  <h2 class="mt-5">商品詳細</h2>
  <div class="mt-5 mb-5">
    <div>
      <%= attachment_image_tag @product, :image, :fill, 100, 100, format: 'jpeg' %>
    </div>

    <div>
      <div class="form-group row">
        <label class="col-sm-2" >商品名</label>
        <%= @product.name %>
      </div>
      <div class="form-group row">
        <label class="col-sm-2" >商品説明</label>
        <%= @product.description %>
      </div>
      <div class="form-group row">
        <label class="col-sm-2" >ジャンル</label>
         <%= @product.genre.name %>
      </div>
      <div class="form-group row">
        <label class="col-sm-2" >税込価格(税抜価格)</label>
        <%= @product.price %>円
      </div>
      <div class="form-group row">
        <label class="col-sm-2" >販売ステータス</label>
        <% if @product.sales_status == false  %>
          <p class="text-success">販売中</p>
        <% else %>
          <p class="text-secondary">販売停止中</p>
        <% end %>
      </div>
      <div class="form-group row">
        <%= link_to"編集する", edit_admin_product_path(@product), class: "btn btn-success" %>
      </div>
    </div>
  </div>
